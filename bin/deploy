#!/bin/bash

./env-check

source tmp/env.bash

export RAILS_ENV=production

[[ $* == *--db-setup* ]] && rails db:drop && rails db:create && rails db:migrate && rails db:seed

[[ $* == *--assets-clobber* ]] && rails assets:clobber && rails assets:clean

for exec in bin/deploy.d/*; do
  eval $exec
done