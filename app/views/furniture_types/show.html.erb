<div class='container'>
	<ol class='breadcrumb col-md-12' style='font-weight: bold; background-color: white; border: 1px solid #eee; border-radius: 0; marginx: auto 20px 30px 20px;'>
		<li><span class='fa fa-angle-double-left' style='margin-left: 10px'></span> <%= link_to 'مبل ویرا', root_path %></li>
		<li><%= link_to t('routes.%s' %controller.controller_name), request.path %></li>
		<li class="active"><%= @furniture_type.name %></li>
	</ol>
	<div class='col-lg-3 col-md-3 col-sm-12 col-xs-12 furniture-right-pannel pull-right'>
		<fieldset class='col-md-12'>
			<legend><span class='fa fa-chevron-left'></span> پنل تنظیمات</legend>
	<% auth_for :ADMIN do %>
			<div>
				<strong>مدیریت منابع</strong>
				<br />
				<div style='margin: 10px'>
					<%= link_to new_furniture_path(:cat => @furniture_type.id), :class => 'btn btn-success' do %>
						<span class='fa fa-plus'></span> ایجاد
					<% end %>
					<div class="btn-group">
					  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-weight: xbold; color: #222">
					    دیگر عملیات‌ها <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu pull-right ir">
					    <li>
					    	<%= link_to '#', :class => 'text-warning' do %>
					    		<span class='fa fa-pause'></span> اعلام ناموجودی
					    	<% end%>
					    </li>
					    <li role="separator" class="divider"></li>
					    <li>
					    	<%= link_to '#', :class => 'text-danger' do %>
					    		<span class='fa fa-minus'></span> حذف
					    	<% end%>
					    </li>
					  </ul>
					</div>
				</div>
				<hr />
			</div>
	<% end %>
			<div>
				<strong>مرتب سازی و جستجو</strong>
				<hr />
			</div>
			<div>
				<strong>بازه‌ی قیمت</strong>
				<hr />
			</div>
			<div>
				<strong>تعداد ست</strong>
				<hr />
			</div>
		</fieldset>
	</div>
	<fieldset class='col-lg-9 col-md-9 col-sm-12 col-xs-12 pull-left'>
		<legend><span class='fa fa-chevron-left'></span> دسته بندی: <b><%= @furniture_type.name %></b></legend>
		<% list_or_prompt @furniture, 'محصولی در این دسته‌بندی یافت نشد.' do |f| %>
			<% col_scales = [6, 6, 6, 12] %>
			<div class="furniture-item col-lg-<%= col_scales[0] %> col-md-<%= col_scales[1] %> col-sm-<%= col_scales[2] %> col-xs-<%= col_scales[3] %>" style='margin-bottom: 30px'>
				<div class='furniture-content'>
			    <div class="hovereffect">
						<%= link_to image_tag(thumbnail_url(f.images), :class => 'img img-thumbnail img-responsive', :style => 'width: 100%; height: 250px'), f %>
		        <div class="overlay">
		           <h2>مدل <b><%= f.name %></b></h2>
		           <%= link_to 'مشاهده‌ جزئیات', f, :class => 'info' %>
		        </div>
						<div class='clearfix'></div>
			    </div>
				</div>
			</div>
		<% end %>
	</fieldset>
</div>
