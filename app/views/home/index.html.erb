<legend>انواع دسته بندی‌ها:</legend>
<% @categories.each do |f| %>
<div class="furniture-item col-lg-4 col-md-4 col-sm-6 col-xs-12">
	<div class='furniture-content'>
		<div class="hovereffect">
			<%= link_to image_tag(furniture_image(f.images), :class => 'img img-thumbnail img-responsive', :style => 'width: 100%; height: 250px'), f %>
		  <div class="overlay">
		     <h2><b><%= f.name %></b></h2>
		     <%= link_to 'مشاهده‌ محصولات', f, :class => 'info' %>
		  </div>
		</div>
		<div class='clearfix'></div>
	</div>
</div>
<% end %>
<div class='clearfix'></div>