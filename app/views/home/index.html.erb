<% @furnitures.each do |f| %>
<div class="furniture-item col-lg-6 col-md-6 col-sm-6 col-xs-12">
	<div class='furniture-content'>
		<div class="hovereffect">
			<%= link_to image_tag(furniture_image(f.images), :class => 'img img-thumbnail img-responsive', :style => 'width: 100%; height: 300px'), f %>
		  <div class="overlay">
		     <h2>مدل <b><%= f.name %></b></h2>
		     <%= link_to 'جزئیات بیشتر', f, :class => 'info' %>
		  </div>
		</div>
		<div class='clearfix'></div>
		<div class='furniture-details'>
			<dl>
				<div class='col-md-4'>
					<dt>قیمت پایه:</dt>
					<dd><%= f.cost? %></dd>
				</div>
				<div class='col-md-8 ir'>
				  <dt>نام مدل</dt>
				  <dd><%= f.name %></dd>
			  </div>
		  </dl>
			<div class='clearfix'></div>
		</div>
	</div>
</div>
<% end %>
<div class='clearfix'></div>

