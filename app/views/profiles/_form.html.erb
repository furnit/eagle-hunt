<div class='container'>
	<div class='col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 block'>
		<legend><h2>ایجاد پروفایل کاربری</h2></legend>
		<%= form_for(profile) do |f| %>
		  <% if profile.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
		
		      <ul>
		      <% profile.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="field">
		    <%= f.label 'نام', :class => 'control-label' %>
		    <%= f.text_field :first_name, :class => 'form-control' %>
		  </div>
		
		  <div class="field">
		    <%= f.label 'نام خانوادگی', :class => 'control-label' %>
		    <%= f.text_field :last_name, :class => 'form-control' %>
		  </div>
		
		  <div class="field">
		    <%= f.label 'شماره موبایل', :class => 'control-label' %>
		    <%= f.text_field :contact, :class => 'form-control' %>
		  </div>
		
		  <div class="field">
		    <%= f.label 'آدرس', :class => 'control-label' %>
		    <%= f.text_area :address, :class => 'form-control' %>
		    <%= f.label 'کدپستی (اختیاری)', :class => 'control-label' %>
		    <%= f.text_field :postal_code, :class => 'form-control' %>
		  </div>
		  
		  <hr />
		
		  <div class="actions">
		    <%= f.submit 'ایجاد پروفایل کابری', :class => 'btn btn-primary' %>
		  </div>
		<% end %>
	</div>
</div>
