<div class='container'>
	<%= path_to_here! %>
	<% auth_for :ADMIN do %>
	<h1>Profiles</h1>
	
	<table>
	  <thead>
	    <tr>
	      <th>User</th>
	      <th>First name</th>
	      <th>Last name</th>
	      <th>Contact</th>
	      <th>Address</th>
	      <th>Avatar</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @profiles.each do |profile| %>
	      <tr>
	        <td><%= profile.user_id %></td>
	        <td><%= profile.first_name %></td>
	        <td><%= profile.last_name %></td>
	        <td><%= profile.contact %></td>
	        <td><%= profile.address %></td>
	        <td><%= profile.avatar %></td>
	        <td><%= link_to 'Show', profile %></td>
	        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
	        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<% end %>
	<% auth_for :CLIENT do %>
		<div class='col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10 block'>
			<div class='row'>
				<div class='col-xs-12 col-sm-8 col-md-4 col-lg-8'>
					<legend>مشخصات کاربری من: <span class="pull-left small"><%= link_to '[ویرایش]', edit_user_registration_path %></span></legend>
					<dl class="dl-horizontal ir">
					  <dt>نام کاربری:</dt>
					  <dd class="en"><%= current_user.username %></dd>
					  <dt>گذرواژه:</dt>
					  <dd><%= raw '<span class=\'fa fa-times\'></span>' * 3 %></dd>
					</dl>
					<legend>مشخصات کاربری من: <span class="pull-left small"><%= link_to '[ویرایش]', edit_profile_path(current_user.profile) %></span></legend>					
					<dl class="dl-horizontal ir">
					  <dt>نام و نام خانوادگی:</dt>
					  <dd><%= current_user.full_name %></dd>
					  <dt>شماره موبایل:</dt>
					  <dd><%= current_user.profile.contact %></dd>
					  <dt>آدرس:</dt>
					  <dd class='text-justify'><%= current_user.profile.address %></dd>
					  <dt>کدپستی:</dt>
					  <dd><%= current_user.profile.postal_code %></dd>
					</dl>
				</div>
				<div class='hidden-xs col-sm-4 sm col-md-4 col-lg-4 pull-right text-center' style='margin-top: 5%;'>
					<%= image_tag 'logo'%>
				</div>
			</div>
		</div>
	<% end %>
</div>
