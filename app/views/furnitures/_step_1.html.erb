<%= javascript_include_tag 'application', 'texteditor', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag    'application', 'texteditor', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="row" style='margin: 20px'>
  <div class="col-md-4">
  	<%= f.label :name, "Name:", class: "col-md-4 control-label" %>
  	<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
	</div>
	<div class="col-md-4">
		<%= f.collection_select :furniture_type_id, FurnitureType.all, :id, :name, { :prompt => 'لطفا نوع مبل را انتخاب کنید.' } %>
	</div>
	<div class="col-md-4" style='xpadding: 0'>
		<label class="btn btn-default btn-file">
    	Add Images <%= f.file_field :images, multiple: true, hidden: true, class: 'hidden' %>
    </label>
  </div>
</div>
<div class="row" style='margin: 20px'>
  <%= f.text_area :comment, class: "form-control", placeholder: "Comment" %>
</div>