<h1>Admin Furniture Colors</h1>

<table>
  <thead>
    <tr>
      <th>Admin furniture color qualities</th>
      <th>Admin furniture color brand</th>
      <th>Comment</th>
      <th>Color value</th>
      <th>Color details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_furniture_colors.each do |admin_furniture_color| %>
      <tr>
        <td><%= admin_furniture_color.admin_furniture_color_qualities %></td>
        <td><%= admin_furniture_color.admin_furniture_color_brand %></td>
        <td><%= admin_furniture_color.comment %></td>
        <td><%= admin_furniture_color.color_value %></td>
        <td><%= admin_furniture_color.color_details %></td>
        <td><%= link_to 'Show', admin_furniture_color %></td>
        <td><%= link_to 'Edit', edit_admin_furniture_color_path(admin_furniture_color) %></td>
        <td><%= link_to 'Destroy', admin_furniture_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

