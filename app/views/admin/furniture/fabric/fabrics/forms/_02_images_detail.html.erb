<legend>اطلاعات طرح‌های مربوط به برند «<b><%= @admin_furniture_fabric.brand.name %></b>»</legend>
<div class='row' id="images-detail">
	<%= remote_form @admin_furniture_fabric do |f| %>
		<%= f.hidden_field :id, value: f.object.id %>
		<% list_or_prompt @admin_furniture_fabric.models, 'عکسی برای این محصول ثبت نشده است.' do |model, index| %>
			<div class="fabric-item pull-right col-lg-4 col-md-4 col-sm-4 col-xs-6" style='margin-bottom: 30px'>
		    <div class='fabric-content'>
		      <div class="thumbnail">
		        <%= image_tag(image_url(model.image, thumb: true), :class => 'img img-thumbnail img-responsive', :style => 'width: 100%; height: 200px') %>
		        <div class="caption" style='padding: 20px'>
		        	<%= f.text_field :name, **{name: "#{model.model_name.param_key}[name][#{model.id}]", value: model.name, hide_label: true, multiple: true, placeholder: 'نام طرح', required: true}.merge(index == 0 ? {autofocus: true} : {}) %>
		        </div>
		      </div>
		    </div>
		  </div>
		<% end %>
		<div class='clearfix'></div>
	  <div class="actions field pull-left" xstyle='position: absolute; bottom: 10px; left: 10px; z-index: 1000'>
	    <a class="btn btn-default nav-step prev-step" tabindex="-1" onclick="wizard_tabline_prev_step()">قبلی <span class='fa fa-arrow-right'></span></a>
	    <%= f.button type: 'submit', class: 'btn btn-primary', data: { disable_with: "درحال ثبت اطلاعات..."} do %>
	    	<span class='fa fa-arrow-left'></span> بعدی
	    <% end %>
	  </div>
	<% end %>
</div>

<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		$('a[data-toggle="tab"]').on('shown.bs.tab', function(e) {
			if($(e.target).attr('aria-controls') === "design-form-tab-content") {
				setTimeout(function(){ $('#images-detail input[autofocus]:first').focus() }, 300);
			}
		});
	});
</script>