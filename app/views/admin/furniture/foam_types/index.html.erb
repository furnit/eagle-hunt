<%= 
	render 'admin/shared/index',
	  title: 'لیست انواع ابر', 
		title_right: lambda {
			link_to new_admin_furniture_foam_type_path, class: 'inline-html-call' do
				raw "<span class='fa fa-plus'></span> ایجاد نوع جدید"
			end
		},
		table_head: {
			'ردیف': { style: 'width: 30px' },
			'عنوان': { style: 'width: 12%' },
			'توضیحات': { },
			'عملیات': { style: 'width: 80px' }
		},
		table_body: lambda {
%>
  <% @admin_furniture_foam_types.each do |admin_furniture_foam_type| %>
    <tr>
      <td><%= admin_furniture_foam_type.id %></td>
      <td>
        <a href="#" class='editable' data-type="text" data-resource="admin_furniture_foam_type" data-name="name" data-url="<%= admin_furniture_foam_type_path(admin_furniture_foam_type) %>" data-original-title="<%= admin_furniture_foam_type.name %>">
          <%= admin_furniture_foam_type.name %>
        </a>
      </td>
      <td>
        <a href="#" class='editable' data-type="textarea" data-placement="bottom" data-resource="admin_furniture_foam_type" data-name="comment" data-url="<%= admin_furniture_foam_type_path(admin_furniture_foam_type) %>" data-original-title="<%= admin_furniture_foam_type.comment %>"><%= admin_furniture_foam_type.comment %></a>
      </td>
      <td>
        <%= link_to admin_furniture_foam_type, method: :delete, data: { confirm: 'آیا از انجام این عمل مطمئن هستید؟' }, class: 'text-danger' do %>
          <span class='fa fa-trash'></span> حذف
        <% end %>
      </td>
    </tr>
  <% end %>
  
<% } %>
