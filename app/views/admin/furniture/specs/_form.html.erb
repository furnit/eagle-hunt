<% form_id = '' %>
<%= redirect_form(admin_furniture_spec) do |f| %>
	<% form_id = f.options[:html][:id] %>
	<div  class='block'>
	  <div class="row">
	    <%= f.text_field :name, :autofocus => true, :required => true, wrapper: {class: 'col-md-6 pull-right'} %>
	    <%= f.text_field :unit, :required => true, wrapper: {class: 'col-md-6'} %>
	  </div>
	
	  <div class="row">
	    <%= f.text_area :comment, :required => true, wrapper: {class: 'col-md-12'} %>
	  </div>
	  <div class='clearfix'></div>
  </div>

  <div class="actions field pull-left">
    <%= f.submit submit_text, :class => 'btn btn-primary' %>
  </div>
<% end %>
