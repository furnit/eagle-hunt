<%=
  render 'admin/shared/index',
    title: "لیست #{t("activerecord.models.#{Admin::Furniture::Furniture.model_name.i18n_key}")}", 
    title_right: lambda {
      link_to new_admin_furniture_furniture_path, class: 'inline-html-call' do
        raw "<span class='fa fa-plus'></span> ایجاد داده‌ی جدید"
      end
    },
    before_table: lambda { 
%>

  <div class='block' style='padding: 20px'>
    <%= form_for_filterrific @filterrific do |f| %>
      <div class='row'>
        <div class="col-md-3 pull-right">
          <label for="filterrific[search_query]"><span class='fa fa-filter'></span> جستجو</label>
          <%= f.search_field :search_query, class: 'filterrific-periodically-observed form-control' %>
        </div>
        <div class='col-md-3 pull-right'>
          <label for="filterrific[sorted_by]"><span class='fa fa-filter'></span> مرتب‌سازی</label>
          <%= f.select(:sorted_by, Admin::Furniture::Furniture.options_for_sorted_by, {}, { :class => 'form-control' }) %>
        </div>
        <div class='col-md-2 pull-right'>
          <label for="filterrific[get_by_furniture_types]"><span class='fa fa-filter'></span> نوع محصول</label>
          <%= f.collection_select(:get_by_furniture_types, Admin::Furniture::Type.all, :id, :name, { :include_blank => 'همه' }, { :class => 'form-control' }) %>
        </div>
        <div class='col-md-2 pull-right'>
          <label for="filterrific[get_by_flags]"><span class='fa fa-flag-o'></span> براساس پرچم‌ها</label>
          <%= f.select(:get_by_flags, Admin::Furniture::Furniture.get_flags.map.with_index { |i, index| [i[:title], index] }, { include_blank: 'هیچ‌کدام'}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class='row' style='margin-top: 10px;'>
        <div class='col-md-3 pull-right'>
          <span class='fa fa-refresh'></span>
          <%= link_to reset_filterrific_url do %>
            حذف فیلتر‌ها
          <% end %>
        </div>
        <div class='clearfix'></div>
      </div>
    <% end %>
  </div>
  
<% } %>

<%= render 'admin/shared/list' %>