<%= 
	render 'admin/shared/index',
	  title: 'لیست برند‌های رنگ‌ها', 
		title_right: lambda {
			link_to new_admin_furniture_paint_color_brand_path, class: 'inline-html-call' do
				raw "<span class='fa fa-plus'></span> ایجاد برند جدید"
			end
		},
		table_head: {
			'ردیف': { style: 'width: 30px' },
			'عنوان': { style: 'width: 12%' },
			'توضیحات': { },
			'آخرین بروزرسانی': { style: 'width: 130px' },
			'عملیات': { style: 'width: 80px' }
		},
		table_body: lambda {
%>
  <% @admin_furniture_paint_color_brands.each do |ft| %>
    <tr>
      <td><%= ft.id %></td>
      <td>
        <a href="#" class='editable' data-type="text" data-resource="admin_furniture_paint_color_brand" data-name="name" data-url="<%= admin_furniture_paint_color_brand_path(ft) %>" data-original-title="<%= ft.name %>">
          <%= ft.name %>
        </a>
      </td>
      <td>
        <a href="#" class='editable' data-type="text" data-resource="admin_furniture_paint_color_brand" data-name="comment" data-url="<%= admin_furniture_paint_color_brand_path(ft) %>" data-original-title="<%= ft.comment %>">
          <%= ft.comment %>
        </a>
      </td>
      	<td class='datetime' data-date='<%= ft.updated_at %>'></td>
      <td>
        <% acu_as :admin do %>
        	<%= link_to admin_furniture_paint_color_brand_path(ft), class: 'text-danger', method: :delete, data: { confirm: { title: "آیا از حذف این برند اطمینان دارید؟", message: "توجه فرمایید که حذف برند «<b>#{ft.name}</b>» غیر قابل بازگشت خواهد بود!" } } do %>
        		<span class='fa fa-trash'></span> حذف
        	<% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  
<% } %>