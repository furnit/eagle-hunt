<% form_id = '' %>
<%= redirect_form furniture_type do |f| %>
	<% form_id = f.options[:html][:id] %>
	<%= params[:admin] ? f.hidden_field(:admin, value: params[:admin]): '' %>
	<div  class='block'>
	  <div class="field col-md-6 pull-right">
	    <%= f.text_field :name, :class => 'form-control', :autofocus => true, :required => true %>
	  </div>
	
	  <div class="field col-md-12 pull-right">
	    <%= f.text_area :comment, :class => 'form-control' %>
	  </div>
	  <div class='clearfix'></div>
  </div>
  
	<%= render 'shared/related_images', collection: furniture_type %>

  <div class="actions field pull-left" style='position: absolute; bottom: 10px; left: 10px; z-index: 1000'>
    <%= f.submit submit_text, :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'shared/update_images', collection: furniture_type, form_id: form_id, multiple: true %>
