<% form_id = 0 %>
<%= redirect_form furniture  do |f| %>
	<% form_id = f.options[:html][:id] %>
	<%= params[:admin] ? f.hidden_field(:admin, value: params[:admin]): '' %>
	<div class='row'>
		<div class="col-xs-12">
			<div class='block'>
			  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right">
			  	<%= f.text_field :name, class: "form-control", placeholder: "نام مدل", :label => 'نام مدل', :autofocus => true, :required => true %>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 pull-right">
					<%= f.collection_select :furniture_type_id, Admin::FurnitureType.all, :id, :name, { :prompt => 'لطفا نوع مبل را انتخاب کنید.' }, :required => true, :class=>'form-control' %>
				</div>
			  <div class="clearfix"></div>
				<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
				  <%= f.text_area :comment, maxlength: 140, data: { noresize: true } %>
			  </div>
        <div class="clearfix"></div>
			</div>
			<%= render 'edit_related_images', collection: furniture %>
		</div>

	  <div class="actions field pull-left" style='position: absolute; bottom: 10px; left: 10px; z-index: 1000'>
	    <%= f.submit submit_text, :class => 'btn btn-primary' %>
	  </div>
	</div>
<% end %>

<%= render 'edit_update_images', collection: furniture, form_id: form_id %>
