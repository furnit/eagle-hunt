<% # DAST MOZD HA %>
<% build_section panel_type: 'success',
			pangel_heading: "<span class='fa fa-money'></span> دست‌مزد",
			thead: ['کارمند', 'دست‌مزد (تومان)'],
			thead_class: {'1': 'col-md-6'} do %>
	<% 
		collection = { }
		[:wage].each do |label|
			collection[label] = intel.map {|i| i[:data][label]}
		end
	%>
	<% klass_id = next_klass.call %>
	<% intel.each do |i| %>
		<tr <%= klass_id %> class="<%= i[:data].confirmed? ? "" : "warning" %>">
			<td><%= i[:data].user.full_name %></td>
			<% [:wage].each do |label| %>
				<td>
					<% outlier_label i[:data][label], collection: collection[label] do %>
						<span class='value currency' data-type="text" data-pk="<%= next_value.call %>" data-url-x='<%= update_field_employee_najars_path(format: :json) %>' data-options='<%= {
							"admin_furniture[employee_najar][id]": i[:data].id
						}.to_json %>' data-resource="admin_furniture[employee_najar]" data-name="<%= label.to_s %>" data-original-value="<%= i[:data][label].to_i %>" data-original-title="مقدار اولیه: <%= i[:data][label].to_i %>"><%= i[:data][label].to_i %></span>
					<% end %>
				</td>
			<% end %>
		</tr>
	<% end %>
<% end %>

<% # ZAMAN BANDI %>
<% build_section panel_type: 'info',
			pangel_heading: "<span class='fa fa-clock-o'></span> زمان‌بندی",
			thead: ['کارمند', 'مدت زمان پایان «نجاری» یا «کنده‌کاری»'],
			thead_class: {'1': 'col-md-6'} do %>
	
	<% klass_id = next_klass.call %>
	<% intel.each do |i| %>
		<tr <%= klass_id %> class="<%= i[:data].confirmed? ? "" : "warning" %>">
			<td><%= i[:data].user.full_name %></td>
			<td>
				<% outlier_label i[:data][:days_to_complete], collection: intel.map { |i| i[:data][:days_to_complete] } do %>
					<span class='value' data-type="text" data-pk="<%= next_value.call %>" data-url-x='<%= update_field_employee_najars_path(format: :json) %>' data-options='<%= {
								"admin_furniture[employee_najar][id]": i[:data].id,
								"admin_furniture[employee_najar][days_to_complete_scale]": "days"
							}.to_json %>' data-resource="admin_furniture[employee_najar]" data-name="days_to_complete" data-original-value="<%= i[:data][:days_to_complete] %>" data-original-title="مقدار اولیه: <%= i[:data][:days_to_complete] %> روز"><%= i[:data][:days_to_complete] %></span>
					&nbsp;
					روز
				<% end %>
			</td>
		</tr>
	<% end %>
<% end %>

