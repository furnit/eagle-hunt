<div class='col-md-offset-2 col-md-8'>
  <legend>
    <h1 class='pull-right'> انواع کاربران</h1>
    <small class='pull-left' style='font-size: 16px; margin-top: 40px;'>
      <%= link_to new_admin_user_type_path, class: 'inline-html-call' do %>
        <span class='fa fa-plus'></span>
        ایجاد نوع جدید
      <% end %>
    </small>
    <div class='clearfix'></div>
  </legend>

<%= acu_as :admin { render 'admin/users/editable_content' }%>

  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>ردیف</th>
        <th>نام</th>
        <th>توضیحات</th>
        <th>سطح دسترسی</th>
        <th colspan="1">عملیات</th>
      </tr>
    </thead>

    <tbody>
      <% @admin_user_types.each do |admin_user_type| %>
        <tr>
          <td><%= admin_user_type.id %></td>
          <td>
            <a href="#" class='editable' data-type="text" data-resource="admin_user_type" data-name="name" data-url="<%= admin_user_type_path(admin_user_type) %>" data-original-title="<%= admin_user_type.name %>">
              <%= admin_user_type.name %>
            </a>
          </td>
          <td>
            <a href="#" class='editable' data-type="textarea" data-placement="bottom" data-resource="admin_user_type" data-name="comment" data-url="<%= admin_user_type_path(admin_user_type) %>" data-original-title="<%= admin_user_type.comment %>"><%= admin_user_type.comment %></a>
          </td>
          <td>
            <a href="#" class='editable' data-type="text" data-resource="admin_user_type" data-name="auth_level" data-url="<%= admin_user_type_path(admin_user_type) %>" data-original-title="<%= admin_user_type.auth_level %>">
              <%= admin_user_type.auth_level %>
            </a>
          </td>
          <td>
            <%= link_to admin_user_type, method: :delete, data: { confirm: 'آیا از انجام این عمل مطمئن هستید؟' }, class: 'text-danger' do %>
              <span class='fa fa-trash'></span> حذف
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
