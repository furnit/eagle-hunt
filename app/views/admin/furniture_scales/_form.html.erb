<% form_id = '' %>
<%= redirect_form(admin_furniture_scale) do |f| %>
	<% form_id = f.options[:html][:id] %>
	<div  class='block'>
	  <div class="field col-md-6 pull-right">
	    <%= f.text_field :name, :autofocus => true, :required => true %>
	  </div>
	
	  <div class="field col-md-12 pull-right">
	    <%= f.text_area :comment %>
	  </div>
	  <div class='clearfix'></div>
  </div>

  <div class="actions field pull-left">
    <%= f.submit submit_text, :class => 'btn btn-primary' %>
  </div>
<% end %>
