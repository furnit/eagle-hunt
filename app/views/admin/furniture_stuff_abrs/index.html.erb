<div class='col-md-offset-2 col-md-8'>
  <legend>
    <h1 class='pull-right'>لیست انواع ابر</h1>
    <small class='pull-left' style='font-size: 16px; margin-top: 40px;'>
      <%= link_to new_admin_furniture_stuff_abr_path, class: 'inline-html-call' do %>
        <span class='fa fa-plus'></span>
        ایجاد نوع جدید
      <% end %>
    </small>
    <div class='clearfix'></div>
  </legend>

<%= acu_as :admin { render 'shared/editable_content' }%>

  <table class='table table-striped table-hover'>
    <thead>
      <tr>
	      <th style='width: 30px'>ردیف</th>
	      <th style='width: 12%;'>عنوان</th>
	      <th style='width: 90px;'>
	      	قیمت
	      	<span data-toggle='tooltip' title='(هزار تومان به ازای هر «<%= Admin::FurnitureSpec.where('name = ?', 'ابر').first.scale %>»)'><span class='fa fa-question-circle'></span></span>
      	</th>
        <th>توضیحات</th>
        <th style='width: 80px;'>عملیات</th>
      </tr>
    </thead>

    <tbody>
      <% @admin_furniture_stuff_abrs.each do |admin_furniture_stuff_abr| %>
        <tr>
          <td><%= admin_furniture_stuff_abr.id %></td>
          <td>
            <a href="#" class='editable' data-type="text" data-resource="admin_furniture_stuff_abr" data-name="name" data-url="<%= admin_furniture_stuff_abr_path(admin_furniture_stuff_abr) %>" data-original-title="<%= admin_furniture_stuff_abr.name %>">
              <%= admin_furniture_stuff_abr.name %>
            </a>
          </td>
          <td>
            <a href="#" class='editable' data-type="text" data-resource="admin_furniture_stuff_abr" data-name="value" data-url="<%= admin_furniture_stuff_abr_path(admin_furniture_stuff_abr) %>" data-original-title="<%= admin_furniture_stuff_abr.value %>">
              <%= admin_furniture_stuff_abr.value %>
            </a>
          </td>
          <td>
            <a href="#" class='editable' data-type="textarea" data-placement="bottom" data-resource="admin_furniture_stuff_abr" data-name="comment" data-url="<%= admin_furniture_stuff_abr_path(admin_furniture_stuff_abr) %>" data-original-title="<%= admin_furniture_stuff_abr.comment %>"><%= admin_furniture_stuff_abr.comment %></a>
          </td>
          <td>
            <%= link_to admin_furniture_stuff_abr, method: :delete, data: { confirm: 'آیا از انجام این عمل مطمئن هستید؟' }, class: 'text-danger' do %>
              <span class='fa fa-trash'></span> حذف
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @admin_furniture_stuff_abrs.empty? %>
      	<tr class='text-center' style='background-color: transparent!important; border: 1px solid #e7e7e7; height: 60px;'>
      		<td colspan="5" style='padding-top: 20px;'>داده‌ای ثبت نشده‌ است!</td>
    		</tr>
      <% end %>
    </tbody>
  </table>
</div>