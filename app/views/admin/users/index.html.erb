<div class='col-md-12 col-lg-10 col-lg-offset-1'>
  <legend>
    <h1 class='pull-right'>کاربران</h1>
    <small class='pull-left' style='font-size: 16px; margin-top: 40px;'>
      <%= link_to new_admin_user_path, class: 'inline-html-call' do %>
        <span class='fa fa-plus'></span>
        ایجاد کاربر جدید
      <% end %>
    </small>
    <div class='clearfix'></div>
  </legend>
  <small style='font-size: 16px;' class='text-disabled pull-left'><%= page_entries_info @users %></small>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th style='width: 30px'>ردیف</th>
        <th style='width: 12%;'>نام و نام‌خانوادگی</th>
        <th style='width: 120px;'>شماره تماس</th>
        <th>آدرس</th>
        <th style='width: 7%;'>آخرین ورود</th>
        <th colspan="2" style='width: 15%;'>عملیات</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.full_name %></td>
          <td><%= number_to_phone(user.phone_number) %></td>
          <td><%= user.profile ? user.profile.address : '«پروفایلی ساخته نشده است»' %></td>
          <td class='datetime' data-time='<%= user.current_sign_in_at %>'><%= user.current_sign_in_at %></td>
          <td>مشاهده پروفایل</td>
          <td>بلاک کردن</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center" style='vertical-align: middle'>
    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
  </div>
</div>